{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "es6",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
  ]
}